<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".forgotPass">

    <ImageView
        android:id="@+id/icon_forgotpassword"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:srcCompat="@drawable/icon_forgotpassword" />

    <TextView
        android:id="@+id/lbl_forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_forgotpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_30ssp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/interbold"
        android:text="Forgot Password?"
        android:textColor="#094067"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbl_description"
        android:layout_width="@dimen/_253sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_forgotpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/interbold"
        android:text="Please enter your phone number to receive a verification code."
        android:textColor="#646464"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbl_email"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_description"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/inter"
        android:text="Enter email"
        android:textColor="#646464"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/lbl_email"
        android:layout_centerInParent="true"
        android:hint="Email"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:textSize="@dimen/_10ssp"
        android:background="@drawable/edit_text_border"
        android:inputType="textPersonName"
        android:padding="@dimen/_10sdp" />

    <Button
        android:id="@+id/btn_forgotpassword"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_below="@id/edit_email"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="@dimen/_50sdp"
        android:background="@drawable/btn_border"
        android:fontFamily="@font/inter"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="@dimen/_8ssp"
        android:textStyle="bold"
        app:backgroundTint="@null" />

    <ImageView
        android:layout_width="@dimen/_158sdp"
        android:layout_height="@dimen/_162sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="-60dp"
        android:layout_marginLeft="-80dp"
        app:srcCompat="@drawable/pangbaba" />

</RelativeLayout>